{% include "header.twig" %}
<h1>Send alert:</h1>
<form action="{{ config.access_point }}forms/send_alert" method="post">
    <input type="hidden" name="board" value="{{ board }}">
    <div class="form-group">
        <label for="message">Message:</label><br>
        <textarea id="message" name="message"></textarea>
    </div>
    <div class="form-group">
        <button>Send message to board!</button>
    </div>
</form>
